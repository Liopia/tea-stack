{
  "name": "eat-stack",
  "version": "1.0.0",
  "description": "A starter template for the EAT stack.",
  "main": "index.js",
  "scripts": {
    "build": "NODE_ENV=production npm-run-all clean -p build:*",
    "build:eleventy": "eleventy",
    "build:rollup": "rollup -c",
    "clean": "rm -rf dist",
    "start": "npm-run-all clean -p build:* -p start:*",
    "start:eleventy": "eleventy --serve --quiet",
    "start:rollup": "rollup -c -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattwaler/eat-stack.git"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "htmlWhitespaceSensitivity": "ignore"
  },
  "keywords": [
    "eleventy",
    "tailwind",
    "alpine"
  ],
  "author": "Matt Waler",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mattwaler/eat-stack/issues"
  },
  "homepage": "https://github.com/mattwaler/eat-stack#readme",
  "dependencies": {
    "alpinejs": "^2.4.1",
    "turbolinks": "^5.2.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@tailwindcss/custom-forms": "^0.2.1",
    "@tailwindcss/typography": "^0.2.0",
    "autoprefixer": "^9.8.5",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.21.0",
    "rollup-plugin-postcss": "^3.1.3",
    "rollup-plugin-terser": "^6.1.0",
    "tailwindcss": "^1.5.0"
  }
}
